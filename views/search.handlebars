<div class="container">
    <div class="row mt-5 mb-5">
        <div class="col-12">
            <form action="{{base}}" method="get">
                <div class="input-group">
                  <input name="q" autocomplete="on" spellcheck="true" text-color="white" type="text" style="padding: 10px;
                color: white;
                border: 1px solid white;
                float: left;
                width: 70%;
                height: 2em;
                font-size: 1.5em;
                background: transparent;" class="form-control" placeholder="Search the web"{{#if q}}value="{{q}}"{{/if}}>
                    <div class="input-group-append">
                        <button class="btn btn-primary" style="float: left;
align: center;  
width: 100px;
height: 2.30em;
  padding: 10px;
  color: white;
  font-size: 25px;
  border: 1px solid white;
  border-left: none; /* Prevent double borders */
  cursor: pointer;"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    {{#each results}}
    <div class="row">
        <div class="col-12">
            <a href="{{this.url}}"><h3>{{this.title}}</h3></a>
            <a href="{{this.url}}"><p>{{this.url}}</p></a>
            <p class = "text">{{this.content}}</p>
            <br>
        </div>
    </div>
    {{/each}}
    {{#if no_results}}
    <div class="row">
        <div class="col-12 justify-content-center">
            <h2>No Results</h2>
        </div>
	</div>
    <div>
    {{/if}}
    {{#if pagination}}
    <div class="row">
        <div class="col-12">
            <nav>
                <ul class="pagination justify-content-center">
                    <li class="page-item {{#if no_prev}}disabled{{/if}}"><a class="page-link" href="{{#if prev_link}}{{prev_link}}{{else}}#{{/if}}">Previous</a></li>
                    {{#each page}}
                    <li class="page-item {{#if this.disabled}}disabled{{/if}}"><a class="page-link" href="{{#if this.link}}{{this.link}}{{else}}#{{/if}}">{{this.text}}</a></li>
                    {{/each}}
                    <li class="page-item {{#if no_next}}disabled{{/if}}"><a class="page-link" href="{{#if next_link}}{{next_link}}{{else}}#{{/if}}">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
    {{/if}}
</div>
