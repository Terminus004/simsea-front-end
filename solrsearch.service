[Unit]
Description=My app

[Service]
ExecStart=/home/ubuntu/solrsearch/index.js
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/home/ubuntu/solrsearch

[Install]
WantedBy=multi-user.target
